modules = ["nodejs-20", "web", "go-1.21", "bash", "go-1.24"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Admin UI"

[[workflows.workflow.tasks]]
